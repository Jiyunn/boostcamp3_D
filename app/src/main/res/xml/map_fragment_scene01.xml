<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition01"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="10000">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ib_set_mypos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/space_small_margin"
            android:layout_marginTop="@dimen/space_medium_margin"
            android:elevation="5dp"
            android:scaleType="center"
            motion:layout_constraintDimensionRatio="1:1"
            motion:layout_constraintStart_toStartOf="@id/mv"
            motion:layout_constraintTop_toBottomOf="@+id/tv_search"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent="0.09" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ib_set_mypos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/space_small_margin"
            android:layout_marginTop="@dimen/space_medium_margin"
            android:elevation="5dp"
            android:scaleType="center"
            motion:layout_constraintDimensionRatio="1:1"
            motion:layout_constraintStart_toStartOf="@id/mv"
            motion:layout_constraintTop_toBottomOf="@+id/tv_search"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent="0.09" />
    </ConstraintSet>

</MotionScene>