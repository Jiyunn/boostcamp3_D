<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="board"
            type="com.teamdonut.eatto.data.Board" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/board_item_size"
        android:layout_marginStart="@dimen/space_large_margin"
        android:layout_marginTop="@dimen/space_small_margin"
        android:layout_marginEnd="@dimen/space_large_margin"
        android:layout_marginBottom="@dimen/space_small_margin"
        android:background="@drawable/cl_board_item_shape"
        android:elevation="@dimen/space_img_btn_padding">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start_of_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/space_small_padding"
            android:src="@drawable/lion"
            app:layout_constraintBottom_toBottomOf="@id/gl_board_item_bottom"
            app:layout_constraintEnd_toEndOf="@id/gl_end_of_user_photo"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl_start_of_item"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_of_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <TextView
            android:id="@+id/tv_board_item_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="@{board.title}"
            android:textSize="@dimen/board_item_title_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/gl_end_of_item_title"
            app:layout_constraintEnd_toEndOf="@id/gl_end_of_board_info"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="@id/gl_end_of_user_photo"
            app:layout_constraintTop_toTopOf="@id/gl_start_of_item"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.55"
            tools:text="7시 강남역 모여라" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_of_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/tv_board_item_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="@{board.address}"
            android:textSize="@dimen/board_tv_text_size"
            app:layout_constraintBottom_toBottomOf="@id/gl_end_of_item_address"
            app:layout_constraintEnd_toEndOf="@id/gl_end_of_board_info"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@id/gl_end_of_user_photo"
            app:layout_constraintTop_toTopOf="@+id/gl_end_of_item_title"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.55"
            tools:text="서울특별시 강남구 역삼동" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_of_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <TextView
            android:id="@+id/tv_board_item_restaurant"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="@{board.restaurantName}"
            android:textSize="@dimen/board_tv_text_size"
            app:layout_constraintBottom_toBottomOf="@id/gl_board_item_bottom"
            app:layout_constraintEnd_toEndOf="@id/gl_end_of_board_info"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@id/gl_end_of_user_photo"
            app:layout_constraintTop_toTopOf="@+id/gl_end_of_item_address"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.55"
            tools:text="서래갈매기" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_of_board_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />


        <ImageView
            android:id="@+id/iv_board_item_current_person"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/gl_end_of_item_title"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="@id/gl_end_of_board_info"
            app:layout_constraintTop_toTopOf="@id/gl_start_of_item"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.05"
            app:srcCompat="@drawable/ic_person_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{String.valueOf(board.currentPerson)+`/`+String.valueOf(board.maxPerson)}"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/gl_end_of_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toTopOf="@id/gl_start_of_item"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.15"
            tools:text="4/6" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_board_item_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />


        <TextView
            android:id="@+id/tv_board_item_time"
            transdate="@{board.appointedTime}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/space_small_padding"
            android:paddingBottom="@dimen/space_small_padding"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl_board_item_bottom"
            tools:text="7:00 p.m." />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>